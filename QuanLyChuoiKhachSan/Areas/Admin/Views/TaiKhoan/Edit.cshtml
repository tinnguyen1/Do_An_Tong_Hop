@model Model.EF.DanhSachNguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Cập nhật thông tin
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaNguoiDung)

        <table class="table">
            <tr>
                <th>
                    Tên người dùng:
                </th>
                <td>
                    @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <th>
                    Địa chỉ:
                </th>
                <td>
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <th>
                    Số điện thoại:
                </th>
                <td>
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <th>
                    Ngày sinh:
                </th>
                <td>
                    @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <th>
                    Giới tính:
                </th>
                <td>
                    Nam @Html.RadioButton("GioiTinh", "Nam") &nbsp;
                    Nữ @Html.RadioButton("GioiTinh", "Nu") &nbsp;
                    khác @Html.RadioButton("GioiTinh", "khac")
                </td>
                <th>
                    Email:
                </th>
                <td>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
        </table>

        <div class="form-group" style="text-align:center">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-default alert-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về trang trước", "ThongTinCaNhan")
</div>

<style>
    .table td, .table th{
        border-top:hidden;
    }
    .table tr th{
        text-align:right;
        padding-right:0px;
    }
</style>