@model PagedList.IPagedList<Model.EF.HoaDon>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh Sách Hàng Hóa
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "HoaDon", FormMethod.Get))
{
    <div class="row form-group">
        <div class="col-lg-12">
            <div class="col-md-4">
                <input type="text" value="@ViewBag.SearchString" class="form-control" placeholder="Mời nhập tên cần tìm" name="searchString" />
                <button type="submit" class="btn btn-success">Tìm kiếm</button>
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            Tên Khách Hàng
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ngày Lập
        </th>
        <th>
            Tổng Tiền
        </th>
        <th>
            Tình Trạng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="color:black">
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.TenKhachHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayLap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            @if (item.TinhTrang == "DangDung")
            {
                <td>
                    <span style="background:#00ff21; color:#000000">@Html.DisplayFor(modelItem => item.TinhTrang)</span>
                </td>
            }
            else
            {
                <td>
                    <span>@Html.DisplayFor(modelItem => item.TinhTrang)</span>
                </td>
            }

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaHoaDon }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaHoaDon }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaHoaDon })
            </td>
        </tr>
    }

</table>
<label>
    Trang số: @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
</label>


