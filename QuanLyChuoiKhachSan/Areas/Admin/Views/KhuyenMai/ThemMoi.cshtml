@model Model.EF.KhuyenMai

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Tạo khuyến mãi
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left:10%">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TenKhuyenMai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKhuyenMai, new { htmlAttributes = new { @class = "form-control", @required="required" } })
                @Html.ValidationMessageFor(model => model.TenKhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <table class="table">
            <tr>
                <th>
                    @Html.LabelFor(model => model.NgayBD, htmlAttributes: new { @class = "control-label col-md-7" })
                </th>
                <td width="240px">
                    <input type="date" id="NgayBD" name="NgayBD" min="@DateTime.Now" required>
                </td>
                <th>
                    @Html.LabelFor(model => model.NgayKT, htmlAttributes: new { @class = "control-label col-md-7" })
                </th>
                <td>
                    <input type="date" id="NgayKT" name="NgayKT" min="DateTime.Now" required>
                </td>
            </tr>
        </table>

        <div class="form-group">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="MoTa" placeholder="Mô tả thông tin Khách sạn"></textarea>
                @*@Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div style="text-align:center">
                <input type="submit" value="Tạo mới" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "DanhSachKhuyenMai")
</div>
<style>
    .table td, .table th {
        border-top: hidden;
    }

    .table tr th {
        text-align: center;
        padding-right: 0px;
    }
</style>