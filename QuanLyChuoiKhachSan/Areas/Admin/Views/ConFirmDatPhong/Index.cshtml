@model List<QuanLyChuoiKhachSan.Areas.Admin.Models.PhieuDatPhong>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header {
    Danh sách Phòng đã đặt
}

@*@section jsFooter{
        <script src="~/Assets/Admin/js/controller/cart1Controller.js"></script>
    }*@
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr style="background-color:lightblue">
                <td>Mã Phòng</td>
                @*<td>Mã Đặt Phòng</td>*@
                <td>Tên Phòng</td>
                <td>Đơn Giá</td>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row_@item.Phong.MaPhong">

                    <td>@item.Phong.MaPhong</td>
                    @*<td>@item.datphong.MaDatPhong</td>*@
                    <td>@item.Phong.TenPhong</td>
                    <td>@item.Phong.BangGiaPhong.Gia.GetValueOrDefault(0).ToString("N0")</td>
                    @*<td>@((item.Hang_Hoa.DonGia.GetValueOrDefault(0) * item.SoLuong).ToString("N0"))</td>*@

                    <td>
                        @Html.ActionLink("Xóa", "Xoa", "ComFirmDatPhong", new { @maPhong = item.Phong.MaPhong },
                       new { onclick = "return confirm ('Bạn có muốn xóa item này');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:right">
        Tổng sản phẩm: @Model.Count
    </div>
    <hr />
    <a href="/Admin/Donhang/SanPham"><button @*id="btnContinue"*@ class="btn alert-link" style="background-color:orange">Thêm hàng</button></a>
    <button id="btnUpdate" class="btn alert-link" style="background-color:orange">Cập nhật hàng</button>
    <button id="btnDelete" class="btn alert-link" style="background-color:orange">Xóa danh sách</button>
    <a href="/Admin/ConFirmDatPhong/DanhSachDatPhong"><button id="btnTaoDonHang" class="btn alert-danger" style="background-color:red; margin-left:5%">Hoàn thành</button></a>

    @*<input type="submit" value="Hoàn Thành" class="btn btn-default alert-danger" />*@

}
else
{
    <div style="text-align:center; padding-top: 30px">
        <span class="alert alert-danger">Chưa có </span>

    </div>


}

