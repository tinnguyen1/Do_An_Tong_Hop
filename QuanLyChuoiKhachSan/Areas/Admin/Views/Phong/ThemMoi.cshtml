@model Model.EF.PhongKhachSan
@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
    {
    Thêm Mới Phòng Khách Sạn
}
<div>
    @using (Html.BeginForm("ThemMoi", "Phong", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div style="margin-left:10%">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    Tên phòng mới:
                    <div class="col-md-10">

                        @Html.EditorFor(model => model.TenPhong, new { htmlAttributes = new { @class = "form-control" }, })
                        @Html.ValidationMessageFor(model => model.TenPhong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Giá Phòng", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("MaBangGiaPhong", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BangGiaPhong, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.Label("Tên Khách Sạn", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("MaKhachSan", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.KhachSan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="text-align:center">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo mới" class="btn btn-danger btn-icon-split" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>


